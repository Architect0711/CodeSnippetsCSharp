<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>XUnit TestClass</Title>
			<Shortcut>xutestclass</Shortcut>
			<Description>Create a Class containing one Method decorated with the Fact Attribute</Description>
			<Author>Robert Bantele</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>methodname</ID>
					<ToolTip>Meaningful Name for the Test</ToolTip>
					<Default>TestMethod1</Default>
				</Literal>
				<Literal>
					<ID>classname</ID>
					<ToolTip>Meaningful Name for the Class</ToolTip>
					<Default>TestClass1</Default>
				</Literal>
			</Declarations>      
            <Imports>
                <Import>
                    <Namespace>Xunit</Namespace>
                </Import>
            </Imports>
			<Code Language="csharp">
	<![CDATA[    public class $classname$
    {
        [Fact]
        public void $methodname$()
        {
            // ---------- Arrange ----------


            // ------------ Act ------------


            // ---------- Assert -----------

        }
    }]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>